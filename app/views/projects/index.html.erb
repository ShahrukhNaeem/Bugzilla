  <body>
    <div class="container">
      <h2>
        Projects

        <p>
          
          <% if policy(Project).new? %>
          <%= link_to 'New Project', new_project_path,class: "btn btn-primary pull-right" %>
          <% end %>

        </p>
      </h2>
      <table class="table">
        <thead>
          <tr>
            <th>Project Name</th>
          </tr>
        </thead>
        <tbody>
          <% @projects.each do |project| %>
          <tr>
            <td><%= project.name %></td>

            <td>
              <%= link_to 'Report Bug', new_bug_path , class: "btn btn-info" if policy(Bug).new?  %>
              <%= link_to("Show Bugs & Users",project_path(project.id), class: "btn btn-info") %>
              <%= link_to "Add User", add_user_project_path(project.id) , class: "btn btn-info" if policy(Project).add_user?%> 
            </td>
            <td> <%= link_to 'Edit', edit_project_path(project),class: "btn btn-info" if policy(Project).edit? %>
            <%= link_to 'Destroy', project,class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?'} if policy(Project).destroy? %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <br>
   </body>
</html>